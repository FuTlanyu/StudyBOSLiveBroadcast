<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light_blue"
    android:fitsSystemWindows="true">

    <FrameLayout
        android:id="@+id/message_top_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#6000">

        <Button
            android:id="@+id/send_message_back_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_back"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="发送消息"
            android:textColor="#fff"
            android:textSize="24sp"/>

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/send_to_text"
            android:layout_margin="10dp"
            android:text="发送到："
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_toRightOf="@id/send_to_text"
            android:id="@+id/send_message_to_who_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入对方的用户名"
            android:textSize="24sp"
            android:maxLines="1"
            android:theme="@style/MyEditText"/>

    </RelativeLayout>

    <TextView
        android:layout_margin="10dp"
        android:textSize="24sp"
        android:text="内容："
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/send_message_message"
        android:textSize="24sp"
        android:hint="请输入要发送的内容"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="5"
        android:theme="@style/MyEditText"/>

    <Button
        android:id="@+id/send_message_send_button"
        android:text="发送"
        android:textColor="#fff"
        android:textSize="24sp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape"/>

</LinearLayout>
