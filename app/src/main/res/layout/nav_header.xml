<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:padding="10dp"
    android:background="@drawable/header_background">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="20dp"
        android:id="@+id/my_head_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#fff"
        android:src="@drawable/icon_image"/>

    <TextView
        android:id="@+id/my_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@id/my_head_image"
        android:text="Warrah" />

    <TextView
        android:id="@+id/my_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/my_id"
        android:layout_below="@id/my_head_image"
        android:text="LV5"/>

    <TextView
        android:id="@+id/my_account_type"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_head_image"
        android:layout_toRightOf="@id/my_level"
        android:text="学生"/>

    <TextView
        android:id="@+id/my_ask_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_id"
        android:layout_marginTop="8dp"
        android:text="提问：9"/>

    <TextView
        android:id="@+id/my_answer_amount"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_id"
        android:layout_toRightOf="@id/my_ask_amount"
        android:text="回答：9"/>

</RelativeLayout>